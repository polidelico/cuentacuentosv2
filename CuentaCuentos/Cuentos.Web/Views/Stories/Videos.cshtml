4@model Cuentos.Models.Videos

@section Header {
    @Html.Partial("~/Views/Shared/_Header.cshtml")
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>

    <div class="Video_Player">

        <video width="720" controls autoplay>
            <source src="~/Content/img/sample.mp4" type="video/mp4">
            Your browser does not support HTML5 video.
        </video>

       
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="http://code.jquery.com/ui/1.9.2/jquery-ui.js"></script>
    <div>
        New Page
        @foreach (var story in Model.Stories)
        {
            <h3>@story.Name</h3>

        }
       
        <script>
            $(document).ready(function () {
                console.log("Logging in...");
                $.ajax(
                "http://awstest.wevideo.com/api/3/sso/login/" + "@Model.Token",
                {
                    success: function () {
                        console.log("Logged in");
                        $("iframe#editor").attr("src", "http://awstest.wevideo.com/c/CuentaCuentos");
                        $("iframe#editor").css("width", "1200px");

                        $("iframe#editor").css("height", "1000px");
                        
                    },
                    error: function () {
                        console.log("Failed login");
                    },
                    xhrFields: { withCredentials: true }
                }
                );
            });
            

        </script>
    </div>
    <iframe id="editor" style="width: 100%; height: auto"></iframe>

</body>
</html>
