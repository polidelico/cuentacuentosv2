@model Cuentos.Models.view.LogInModel

@{
    ViewBag.Title = "Entrar a Mi Cuenta";
}


<div class="content cuenta">
    
    <div class="wp">
    <h1>Entrar a Mi Cuenta</h1>
    <h2>Debes iniciar sesión para entrar a tu cuenta.</h2>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "MyForm" }))
    {
        @Html.ValidationSummary(true, "Login no tuvo éxito. Por favor, corrija los errores y vuelva a intentarlo.")
        
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName)
        @Html.ValidationMessageFor(m => m.UserName)

        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password)
        @Html.ValidationMessageFor(m => m.Password)


        <input type="submit" class="btn_naranja btn_iniciar" value="INICIAR SESIÓN" />

        <div class="olvidaste">
            <p></p>
            <p>¿No tienes una cuenta? <a href="@Url.Action("Register", "Account")">Regístrate Aquí</a></p>
            <a href="@Url.RouteUrl("RecuperarContrasena")">¿Olvidaste tu contraseña?</a>
        </div>
    }
    </div>
</div>

@section scripts {
<script src="@Url.Content("~/Scripts/vendor/jquery.validate.js")" type="text/javascript"></script>
<script>

    $(document).ready(function () {

        $("#MyForm").validate({
            rules: {
                'UserName': { required: true },
                'Password': { required: true }

            },
            errorPlacement: function (error, element) {
                element.attr("class", "error");
            },
            success: function (element) {
                element.removeAttr("class");
            }
        });

    });

</script>

}
