<div id="messageModal" class="modal fade" style="display: none;" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form>
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">Detalles del Mensaje</h4>
          </div>
          <div class="modal-body">
            <p><strong>De parte: </strong> <span class="name"></span> <<span class="from"></span>> </p>
            <p><strong>Asunto: </strong> <span class="subject"></span> </p>
            <p><span class="commentsText"></span></p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            <button type="submit" class="btn btn-blue">Marcar como leído</button>
          </div>
      </form>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>