<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0">
    <link rel="shortcut icon" type="image/png" href="~/img/logo-toyota-favicon.png" />
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <title>Cuenta Cuentos Admin</title>

    <link href="~/Content/css/fontsOpenSans.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/css/jasny-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/css/application.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/css/cuentos-admin.css" rel="stylesheet" />


    <link href="~/Areas/Admin/Content/kendo/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/kendo/kendo.default.min.css" rel="stylesheet" />

    <script src="~/Areas/Admin/Content/kendo/jquery.min.js"></script>
    <script src="~/Areas/Admin/Content/kendo/kendo.all.min.js"></script>

</head>



<body>

    @Html.Partial("_TopNavigation")

    @Html.Partial("_SideNavigation")

    <div class="main-content">
        <div class="container">
            <div class="row">

                <div class="area-top clearfix">
                    <div class="pull-left header">
                        <h3 class="title">
                            @if (@ViewBag.TitleIcon != null)
                            {
                                <i class="icon-@ViewBag.TitleIcon"></i>
                            }

                            @ViewBag.Title
                        </h3>

                        @if (@ViewBag.Subtitle != null)
                        {
                            <h5>
                                <span>
                                    @ViewBag.Subtitle
                                </span>
                            </h5>
                        }
                    </div>

                </div>
            </div>
        </div>

        <div class="container">
            @Html.Partial("~/Views/Shared/_Flash.cshtml")
        </div>

        <div class="container padded">
            <div class="row">
                <!-- Breadcrumb line -->
                @Html.Partial("_Breadcrumbs")
            </div>
        </div>

        <div class="container">
            @RenderBody()
        </div>

    </div>

    <script src="~/Areas/Admin/Content/js/application.js"></script>
    

    @RenderSection("scripts", required: false)

</body>
</html>
