@model IEnumerable<Cuentos.Models.ImageCategory>

@{
    ViewBag.Title = "Categorías de Imágenes";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-md-3">
        <!-- find me in partials/action_nav_normal -->
        <!--big normal buttons-->
        <div class="action-nav-normal">

            <div class="row action-nav-row">
                <div class="col-sm-6 action-nav-button">
                    <a href="@Url.Action("Create")" title="Añadir Categoría">
                        <i class="icon-file-alt"></i>
                        <span>Añadir Categoría</span>
                    </a>
                    <span class="triangle-button red"><i class="icon-plus"></i></span>
                </div>

            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header"><span class="title"> Categorías </span></div>
            <div class="box-content">
                <!-- find me in partials/data_tables_custom -->

                <div id="dataTables">
                    <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
                        <thead>
                            <tr>
                                <td class="hidden"></td>
                                <th><div> Nombre de la Categoría </div></th>
                                <th style="width: 80px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr id="item-@category.Id" data-id="@category.Id">
                                    <td class="hidden">@category.Id</td>
                                    <td class="confirmName">@category.Name</td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-xs btn-default" href="@Url.Action("Edit", new { id = category.Id })"><i class="icon-cog"></i></a>
                                            <a class="btn btn-xs btn-default confirmDelete" data-toggle="modal" data-url="@Url.Action("Delete", "ImageCategories", new { id = category.Id })" href="#confirmDelete"><i class="icon-remove"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_DeleteConfirm")