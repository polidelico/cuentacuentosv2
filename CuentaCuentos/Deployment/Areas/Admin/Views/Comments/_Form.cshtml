@using Cuentos.Lib.Helpers
@using Cuentos.Lib
@model Comment

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal fill-up validatable" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="padded">

        <div class="form-group">
            @Html.LabelFor(model => model.Text, new { @class = "control-label col-lg-2" })
            <div class="col-lg-10">
                @Html.TextAreaFor(model => model.Text)
                <span class="help-block note error"><i class="icon-warning-sign"></i> @Html.ValidationMessageFor(model => model.Text)</span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsApproved, new { @class = "control-label col-lg-2" })
            <div class="col-lg-10">
                @Html.EditorFor(model => model.IsApproved)
                <span class="help-block note error"><i class="icon-warning-sign"></i> @Html.ValidationMessageFor(model => model.User.IsApproved) </span>
            </div>
        </div>

    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-blue">Guardar Cambios</button>
        <a class="btn btn-default" href="@Url.Action("Index", "Stories")">Cancelar</a>
    </div>
}