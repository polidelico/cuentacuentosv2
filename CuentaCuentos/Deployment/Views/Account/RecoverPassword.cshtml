@model Cuentos.Models.User
@{
    ViewBag.Title = "Recupera tu contraseña";
}


<div class="content cuenta">
    <div class="wp">
        <h1>Recupera tu contraseña</h1>
        <h2>Entra tu nombre de usuario asociado a tu cuenta y te enviaremos tu nueva contraseña.</h2>

        @using (Html.BeginForm())
        {
            @Html.LabelFor(m => m.UserName)
            @Html.TextBoxFor(m => m.UserName)
            @Html.ValidationMessageFor(m => m.UserName)

            <input type="submit" class="btn_naranja btn_iniciar" value="ENVIAR" />

            <div class="olvidaste">
                <p>¿No tienes una cuenta? <a href="@Url.Action("Register")">Regístrate Aquí</a></p>
            </div>
        }
    </div>
</div>



@section scripts {
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>   
}